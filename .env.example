# =============================================================================
# IBM Masterclass Day 1 - Environment Configuration
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# Never commit .env files with real credentials to version control!

# =============================================================================
# Azure Subscription & General
# =============================================================================
AZURE_SUBSCRIPTION_ID=your-subscription-id-here
AZURE_TENANT_ID=your-tenant-id-here
AZURE_RESOURCE_GROUP=your-resource-group-name

# =============================================================================
# Azure OpenAI Configuration (EX1, EX2, EX3, EX4, EX5, EX6)
# =============================================================================
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-openai-api-key-here
AZURE_OPENAI_API_VERSION=2024-06-01
AZURE_OPENAI_DEPLOYMENT_NAME=gpt-4o
AZURE_OPENAI_MODEL_NAME=gpt-4o
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=text-embedding-3-small

# =============================================================================
# Azure AI Foundry / AI Studio (EX2, EX4, EX5, EX6)
# =============================================================================
AI_FOUNDRY_ENDPOINT=https://your-ai-foundry.cognitiveservices.azure.com/
AI_FOUNDRY_API_KEY=your-ai-foundry-key-here
AI_FOUNDRY_PROJECT_ID=your-project-id-here

# =============================================================================
# Azure AI Search Configuration (EX3)
# =============================================================================
AZURE_SEARCH_ENDPOINT=https://your-search-service.search.windows.net
AZURE_SEARCH_API_KEY=your-search-admin-key-here
AZURE_SEARCH_INDEX_NAME=masterclass-index

# =============================================================================
# Semantic Kernel Configuration (EX6)
# =============================================================================
SK_SERVICE_ID=azure-openai-service
SK_DEPLOYMENT_NAME=gpt-4o
SK_EMBEDDING_DEPLOYMENT_NAME=text-embedding-3-small

# =============================================================================
# Agent Orchestration Configuration (EX5, EX6)
# =============================================================================
AGENT_SERVICE_ENDPOINT=your-agent-service-endpoint-here
AGENT_SERVICE_KEY=your-agent-service-key-here

# =============================================================================
# Logging and Monitoring (Optional)
# =============================================================================
LOG_LEVEL=INFO
APPLICATION_INSIGHTS_CONNECTION_STRING=your-app-insights-connection-string-here